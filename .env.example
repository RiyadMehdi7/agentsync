# AgentSync MCP Configuration
# Copy this file to .env and fill in your values.

# Required for AI-powered conflict analysis (optional without it)
ANTHROPIC_API_KEY=

# Database path (default: data/agentsync.db)
AGENTSYNC_DB_PATH=data/agentsync.db

# Server binding
AGENTSYNC_HOST=0.0.0.0
AGENTSYNC_PORT=8080

# Lock defaults
AGENTSYNC_DEFAULT_TTL=1800
AGENTSYNC_CLEANUP_INTERVAL=60

# LLM model for conflict analysis
AGENTSYNC_CONFLICT_MODEL=claude-sonnet-4-20250514

# Logging level (DEBUG, INFO, WARNING, ERROR)
AGENTSYNC_LOG_LEVEL=INFO
